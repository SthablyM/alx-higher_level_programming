#!/usr/bin/env bash

# Update package index 
apt update

apt install -y nginx

service nginx start

sed -i 's/^listen\ \[::\]:80 default\_server;/listen\ 80\ default\_server;/' /etc/nginx/sites-available/default

service nginx reload


echo -e "Hello World!"> /var/www/html/index.html

nginx -s reload

exit 0
